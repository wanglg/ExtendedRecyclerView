<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="cn.aixuetang.com.recyclerview">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity
            android:name=".ExtendedRecyclerViewDemos"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".LinearLayoutAutoLoadMoreActivity"
            android:label="LinearLayout/AutoLoadMore">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="com.example.extendedrecyclerview.SAMPLE_CODE" />
            </intent-filter>
        </activity>
        <activity
            android:name=".CommonDemoActivity"
            android:label="Common">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="com.example.extendedrecyclerview.SAMPLE_CODE" />
            </intent-filter>
        </activity>
        <activity
            android:name=".LoadMoreWrapperActivity"
            android:label="LoadMoreWrapper">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="com.example.extendedrecyclerview.SAMPLE_CODE" />
            </intent-filter>
        </activity>
        <activity
            android:name=".LinearLayoutClickLoadMoreActivity"
            android:label="LinearLayout/ClickLoadMore">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="com.example.extendedrecyclerview.SAMPLE_CODE" />
            </intent-filter>
        </activity>
        <activity
            android:name=".GridLayoutActivity"
            android:label="GridLayout/DefaultSwipeRefresh">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="com.example.extendedrecyclerview.SAMPLE_CODE" />
            </intent-filter>
        </activity>
        <activity
            android:name=".CustomSwipeRefreshGridLayoutActivity"
            android:label="GridLayout/CustomSwipeRefresh">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="com.example.extendedrecyclerview.SAMPLE_CODE" />
            </intent-filter>
        </activity>
    </application>

</manifest>
